package ex3;

public class Triangulo {
	double angA, angB, angC;
	
	public Triangulo(double angA,double angB,double angC) {
		this.angA = angA;
		this.angB = angB;
		this.angC = angC;
	}
	
	public int getTriangulo() {			//tipo 1 = triangulo retangulo; tipo 0 = triangulo qualquer não retangulo
		if(angA == angB) {
			return 1;
		}else if(angA == angC) {
			return 1;
		}else if(angB == angC) {
			return 1;
		}else {
			return 0;
		}
	}
}
